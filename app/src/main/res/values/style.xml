<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground" >@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/maroon_dark</item>
        <item name="android:navigationBarColor">@color/maroon_dark</item>
        <item name="colorControlActivated">@color/maroon_dark</item>
        <item name="colorPrimary">@color/maroon_main</item>
        <item name="colorPrimaryDark">@color/maroon_dark</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
    <style name="MainActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/maroon_main</item>
        <item name="colorPrimaryDark">@color/maroon_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/caramel_lite</item>
        <item name="colorSecondaryVariant">@color/caramel_main</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/maroon_dark</item>
        <item name="android:navigationBarColor">@color/maroon_dark</item>
    </style>
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/maroon_main</item>
    </style>
</resources>